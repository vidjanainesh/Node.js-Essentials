<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Home</title>
</head>
<body>
    <h1>USER MANAGEMENT SYSTEM</h1>
    
    <a href="/create"> Create User </a>

    <br><br>    
    <a href = '/users'>View Users</a>

    <br><br>
    <a href = '/add-orders'>Create Orders</a>
    
    <br><br>
    <a href = '/view-orders'>View Orders</a>

    <form onsubmit="redirectToEdit(event)">
        <br>
        <br>
        <input type="number" id="editId" name="editId" placeholder="Enter ID to edit"> 
        <button type="submit">Edit User</button> 
    </form>

    <form onsubmit="redirectToDelete(event)">
        <br>
        <br>
        <input type="number" id="deleteId"  name="deleteId" placeholder="Enter ID to delete" required> 
        <button type="submit">Delete User</button> 
    </form>

    <script>
        function redirectToEdit(event) {
            event.preventDefault();
            let userId = document.querySelector('#editId').value;
            if (!userId) {
                alert("Please enter an ID to edit");
                return;
            }
            window.location.href = `/edit/${userId}`;
        }

        function redirectToDelete(event) {
            event.preventDefault();
            let userId = document.querySelector('#deleteId').value;
            if (!userId) {
                alert("Please enter an ID");
                return;
            }
            window.location.href = `/delete/${userId}`;
        }
    </script>
</body>
</html>